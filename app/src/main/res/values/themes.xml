<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MRGToDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/veryLightGrey</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultText" parent="Theme.MRGToDo">
        <item name="fontFamily">@font/primary_regular</item>
    </style>

    <style name="header" parent="DefaultText">
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="h1" parent="header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="h2" parent="header">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="h3" parent="header">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="p" parent="DefaultText">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="PrimaryButton" parent="Theme.MRGToDo">
        <item name="fontFamily">@font/primary_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/primary_black</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SecondaryButton" parent="Theme.MRGToDo">
        <item name="backgroundTint">@color/secondaryButtonBackgroundTint</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="iconTint">@color/secondaryIconColor</item>
        <item name="fontFamily">@font/primary_bold</item>
        <item name="rippleColor">@color/secondaryIconColor</item>
    </style>
</resources>